<html>
    <head>
        {# <!-- Add bootstrap to html page --> #}
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Add your first contact</title>
    </head>
    <body>
        <div class='container'>
            <h1>Complete the form below to add your first contact</h1>
            <form action='/add_confirm' method='post'>
                <div class='form-group'>
                    <label for='name'>First and Last Name</label>
                    <input id='name' name='name' type='text'>
                </div>
                <div class='form-group'>
                    <label for='phone_number'>Phone Number</label>
                    <input id='phone_number' name='phone_number' type='tel'>
                </div>
                <div class='form-group'>
                    <label for='street_address'>Street Address</label>
                    <input id='street_address' name='street_address' type='text'>
                </div>
                <div class='form-group'>
                    <label for='email'>Email Address</label>
                    <input id='email' name='email' type='email'>
                </div>
                <button type='submit'class='btn btn-success'><font color='white'>Add Contact</button>
            </form>
        </div>
    </body>
</html>
